@model DataAccess.Data.Entities.User;

<h1>Edit User: </h1>

<form asp-action="EditUser" method="post" class="row g-3">
    <input asp-for="Id" hidden/>
    <div class="col-md-6">
        <label asp-for="Email" class="form-label">Email: </label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email">
        <span asp-validation-for="Email" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="NickName" class="form-label">Nickname: </label>
        <input asp-for="NickName" type="text" class="form-control" placeholder="Enter nickname">
        <span asp-validation-for="NickName" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="FirstName" class="form-label">Firstname: </label>
        <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter firstname">
        <span asp-validation-for="FirstName" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="LastName" class="form-label">Lastname: </label>
        <input asp-for="LastName" type="text" class="form-control" placeholder="Enter lastname">
        <span asp-validation-for="LastName" class="form-text text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="BirthdayDate" class="form-label">BirthdayDate: </label>
        <input asp-for="BirthdayDate" type="date" class="form-control">
        <span asp-validation-for="BirthdayDate" class="form-text text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="AvatarImageUrl" class="form-label">Avatar Image Url: </label>
        <input asp-for="AvatarImageUrl" type="url" class="form-control" placeholder="Enter avatar image url: ">
        <span asp-validation-for="AvatarImageUrl" class="form-text text-danger"></span>
    </div>

    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-dark w-100">Back</a>
    </div>
    <div class="col-md-6">
        <button type="submit" class="btn btn-success w-100">Save changes</button>
    </div>
</form>